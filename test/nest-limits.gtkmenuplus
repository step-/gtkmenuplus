#!/root/bin/gtkmenuplus

#-------------------------------------------
configure = endsubmenu noicons
mTESTFILE = $0 # required
mDIR=nest
include = lib/common.gtkmenuplus
#-------------------------------------------

# PASS IF ERROR DIALOG
DO_ERROR_TEST=no

separator
item = 10 launchersub=: PASS if levels 2>3>4>5>two items
submenu = 2
submenu = 3
submenu = 4
submenu = 5
launchersub=nest
endsubmenu
endsubmenu
endsubmenu
endsubmenu

separator
item = 20 launcher=: PASS if levels 2>3>4>5>two items
submenu = 2
submenu = 3
submenu = 4
submenu = 5
launcher=nest
endsubmenu
endsubmenu
endsubmenu
endsubmenu

separator
item = 30 launcher & sub=: PASS if levels 2>3>4>5>four items
submenu = 2
submenu = 3
submenu = 4
submenu = 5
launchersub=nest
separator
launcher=nest
endsubmenu
endsubmenu
endsubmenu
endsubmenu

separator
format=
item = 40 submenu=+launchersub=: PASS if "A">"B" are blue, and lower level items are red
format = foreground="blue"
 submenu = A submenu=... to launchersub=
 submenu = B
 format = foreground="red"
 submenu = C
 # submenu = D
 launchersub=nest
 # endsubmenu # D
 endsubmenu # C
 endsubmenu # B
 endsubmenu # A submenu=... to launchersub=

item = ... next: enable DO_ERROR_TEST in $mTESTFILE...
# PASS IF ERROR DIALOG
if= $DO_ERROR_TEST
separator

separator
item = 100 launcher{sub}=: PASS if error dialog
submenu = 2
submenu = 3
submenu = 4
submenu = 5
submenu = 6
launcher=nest
launchersub=nest
endsubmenu
endsubmenu
endsubmenu
endsubmenu
endsubmenu

endif

#:vim ft=sh:
